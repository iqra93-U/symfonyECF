{% extends 'base.html.twig' %}
{% block body %}

    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link active"  href="{{ path('candidat_info') }}">Profile</a>
        </li>

        <li class="nav-item">
            <a class="nav-link" href="{{ path('competence_info') }}">Competence</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href=" {{ path('experience') }} ">Experience</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href=" {{ path('documents') }} ">Documents</a>
        </li>
    </ul>


    <a href="{{ path('app_logout') }}" type="button" class="btn btn-dark">logOut</a>

    {{ form(competenceForm) }}

    {% if is_granted('ROLE_COLAB') %}

    <table class="table table-striped">
        <thead>
        <tr>
            <th> name </th>
            <th> expert_level </th>
            <th> like_competence </th>
        </tr>
        </thead>
        <tbody>

                {% for competence in app.user.competences %}
                    <tr>
                        <td> {{ competence.name }}</td>
                        <td> {{ competence.expertLevel }}</td>
                        <td> {{ competence.likeCompetence }}</td>
                        <td>
                            <a href="{{ path("competence_modify", { id : competence.id}) }}">
                                Modifier
                            </a>
                        </td>
                    </tr>
                {% endfor %}



        </tbody>

    </table>

    {% endif %}
{% endblock %}